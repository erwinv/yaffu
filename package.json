{
  "name": "yaffu",
  "version": "1.4.3",
  "description": "Yet Another FFmpeg Util",
  "type": "commonjs",
  "files": [
    "./build/**/*"
  ],
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "require": "./build/index.js",
      "import": "./build/index.js"
    }
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "format": "prettier --write .",
    "prelint": "npm run format",
    "lint": "eslint . --ext .ts,.mts",
    "prebuild": "npm run lint",
    "build": "tsc",
    "pretest": "npm run build",
    "test": "jest",
    "build:watch": "tsc -w",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erwinv/yaffu.git"
  },
  "keywords": [
    "ffmpeg",
    "video",
    "audio"
  ],
  "author": "Erwin Villejo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/erwinv/yaffu/issues"
  },
  "homepage": "https://github.com/erwinv/yaffu#readme",
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
